{
	"name": "api-gateway",
	"version": "1.0.0",
	"description": "Api Gateway para los microservicios",
	"main": "dist/server.js",
	"author": "OJG",
	"license": "MIT",
	"scripts": {
		"test": "jest",
		"dev": "nodemon -r dotenv/config --watch './lib/**/*.ts' --exec 'ts-node' ./lib/server.ts",
		"start": "node -r dotenv/config ./dist/server.js",
		"build": "tsc -p tsconfig.prod.json",
		"lint": "eslint lib/**/*.ts",
		"lint-fix": "eslint --fix lib/**/*.ts",
		"pretty": "prettier --write 'lib/**/*.ts'",
		"prepare": "husky install",
		"precommit": "yarn lint-fix && yarn pretty",
		"prepush": "yarn lint"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"dotenv": "^10.0.0",
		"express": "^4.17.2",
		"express-http-proxy": "^1.6.3",
		"jsonwebtoken": "^8.5.1",
		"winston": "^3.3.3"
	},
	"devDependencies": {
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/jest": "^27.4.0",
		"@types/jsonwebtoken": "^8.5.6",
		"@types/supertest": "^2.0.11",
		"@typescript-eslint/eslint-plugin": "^5.9.0",
		"@typescript-eslint/parser": "^5.9.0",
		"eslint": "^8.6.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.25.4",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^7.0.4",
		"jest": "^27.4.7",
		"prettier": "^2.5.1",
		"supertest": "^6.1.6",
		"ts-jest": "^27.1.2",
		"ts-node": "^10.4.0",
		"typescript": "^4.5.4"
	}
}
