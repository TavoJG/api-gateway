{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"pretty": true,
		"target": "es6",
		"outDir": "./dist",
		"baseUrl": "./lib",
		"esModuleInterop": true,
		"inlineSourceMap": true,
		"strict": true,
		"skipLibCheck": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"paths": {
			"*": ["node_modules/*", "tests/*"]
		}
	},
	"include": ["lib/**/*.ts", "tests/**/**.ts"],
	"exclude": ["node_modules"]
}
